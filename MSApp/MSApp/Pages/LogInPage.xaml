<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSApp.Pages.LogInPage">
    <Grid>
        <Image Source="bckgrd.jpg" Aspect="AspectFill"/>
    <StackLayout VerticalOptions="CenterAndExpand" BackgroundColor="#ffffff" Opacity="0.7">
        <Image Source="logo.png"/>
            <Entry x:Name="emailEntry" Placeholder="E-Mail" TextColor="#000000" HorizontalTextAlignment="Center" Margin="50,20,50,0"/>
            <Entry IsPassword="True" x:Name="passwordEntry" Placeholder="Password" TextColor="#000000" HorizontalTextAlignment="Center" Margin="50,20,50,0"/>
            <Button x:Name="btnLogin" Text="Login" TextColor="#000000" FontSize="Medium" Margin="50,20,50,0" Clicked="ShowMainPage"/>
            <Button x:Name="btnSignUp" Text="Sign-Up" TextColor="#000000" FontSize="Medium" Margin="50,10,50,20" Clicked="ShowSignUp"/>
        </StackLayout>
    </Grid>
</ContentPage>